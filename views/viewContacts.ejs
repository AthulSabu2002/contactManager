<!-- contacts.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>User Contacts</title>
    <style>
        /* Add some basic styling for the contact cards */
        .contact-card {
            border: 1px solid #ddd;
            padding: 10px;
            margin: 10px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #f9f9f9;
        }

        /* Style for the buttons */
        .action-buttons {
            margin-top: 10px;
        }

        .edit-button, .delete-button {
            padding: 5px 10px;
            margin-right: 5px;
            cursor: pointer;
            border: 1px solid #007bff;
            border-radius: 3px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
        }

        .delete-button {
            border: 1px solid #dc3545;
            background-color: #dc3545;
        }
    </style>
</head>
<body>
    <h1>User Contacts</h1>
    <h2>Welcome, <%= user.username %></h2>

    <% contacts.forEach(contact => { %>
        <div class="contact-card">
            <h3><%= contact.name %></h3>
            <p>Email: <%= contact.email %></p>
            <p>Phone: <%= contact.phone %></p>

            <div class="action-buttons">
                <form action="/edit/<%= contact._id %>" method="get" onsubmit="return confirm('Are you sure you want to edit this contact?');">
                    <input type="hidden" name="contactId" value="<%= contact.id %>">
                    <button type="submit" class="delete-button">Edit</button>
                </form>
                <form action="/deleteContact" method="post" onsubmit="return confirm('Are you sure you want to delete this contact?');">
                    <input type="hidden" name="contactId" value="<%= contact.id %>">
                    <button type="submit" class="delete-button">Delete</button>
                </form>
            </div>
        </div>
    <% }); %>

    <a href="/dashboard">Go back to Dashboard</a>
</body>
</html>
